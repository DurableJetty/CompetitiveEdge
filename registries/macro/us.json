      "allowed_source_ids": ["federal_reserve_data"],
      "release_cadence": "monthly"
    }
  ],
  "policy_events": [
    {
      "id": "fomc_meeting",
      "name": "FOMC Policy Decision",
      "primary_publisher_ids": ["federal_reserve"],

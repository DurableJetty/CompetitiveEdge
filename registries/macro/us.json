      "allowed_source_ids": ["bea_national_accounts"],
      "release_cadence": "monthly"
    },
    {
      "id": "cpi",
      "name": "Consumer Price Index",
      "description": "Consumer price inflation measure.",
      "primary_publisher_ids": ["bls"],
      "allowed_source_ids": ["bls_statistics"],
      "release_cadence": "monthly"
    },
    {
      "id": "employment_situation",
      "name": "Employment Situation",
      "description": "Labor market employment and unemployment statistics.",
      "primary_publisher_ids": ["bls"],
      "allowed_source_ids": ["bls_statistics"],
      "release_cadence": "monthly"
    },
    {
      "id": "retail_sales",
      "name": "Retail Sales",
      "description": "Consumer spending activity measure.",
      "primary_publisher_ids": ["census"],
      "allowed_source_ids": ["census_econ"],
      "release_cadence": "monthly"
    },
    {
      "id": "housing_starts",
      "name": "Housing Starts",
